{
  "manifest_version": 2,
  "name": "Safe For Work",
  "description": "Open up a safe-for-work browser window to hide what you're really doing!",
  "version": "1.4",
  "commands": {
    "open-sfw": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Open SFW window"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}